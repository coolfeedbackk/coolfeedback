    <script>
        // Price Calculator
        function calculatePrice() {
            const platform = document.getElementById('platform').value;
            const count = parseInt(document.getElementById('reviewCount').value);
            
            const prices = {
                'yandex': 500,
                '2gis': 400
            };

            const pricePerReview = prices[platform];
            const total = pricePerReview * count;

            document.getElementById('countDisplay').textContent = count;
            document.getElementById('pricePerReview').textContent = pricePerReview + '‚ÇΩ';
            document.getElementById('quantity').textContent = count + ' —à—Ç.';
            document.getElementById('totalPrice').textContent = total.toLocaleString('ru-RU') + '‚ÇΩ';
        }

        // Form Submission
        function submitForm(event) {
            event.preventDefault();

            // Clear previous errors
            document.querySelectorAll('.error').forEach(el => el.textContent = '');

            // Get form values
            const fullName = document.getElementById('fullName').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const platform = document.getElementById('formPlatform').value;
            const reviewCount = document.getElementById('formReviewCount').value;
            const productUrl = document.getElementById('productUrl').value.trim();

            // Validate
            let hasError = false;

            if (!fullName) {
                document.getElementById('fullNameError').textContent = '–í–≤–µ–¥–∏—Ç–µ –§–ò–û';
                hasError = true;
            }

            if (!phone) {
                document.getElementById('phoneError').textContent = '–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞';
                hasError = true;
            }

            if (!productUrl) {
                document.getElementById('productUrlError').textContent = '–í–≤–µ–¥–∏—Ç–µ —Å—Å—ã–ª–∫—É';
                hasError = true;
            }

            if (hasError) return;

            // Show success message
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('contactForm').style.display = 'none';

            // Prepare Telegram message
            const platformName = platform === 'yandex' ? '–Ø–Ω–¥–µ–∫—Å –ö–∞—Ä—Ç—ã' : '2–ì–ò–°';
            const message = `üÜï –ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ –Ω–∞ –æ—Ç–∑—ã–≤—ã\n\n` +
                          `üë§ –§–ò–û: ${fullName}\n` +
                          `üì± –¢–µ–ª–µ—Ñ–æ–Ω: ${phone}\n` +
                          `üìç –ü–ª–∞—Ç—Ñ–æ—Ä–º–∞: ${platformName}\n` +
                          `üìä –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ: ${reviewCount} –æ—Ç–∑—ã–≤–æ–≤\n` +
                          `üîó –°—Å—ã–ª–∫–∞: ${productUrl}`;

            // Redirect to Telegram
            const telegramUrl = `https://t.me/ATUWU?text=${encodeURIComponent(message)}`;
            
            setTimeout(() => {
                window.location.href = telegramUrl;
            }, 1500);
        }

        // Accordion Toggle
        function toggleAccordion(id) {
            const content = document.getElementById(id + '-content');
            const icon = document.getElementById(id + '-icon');
            
            content.classList.toggle('active');
            icon.classList.toggle('active');
        }

        // Initialize price calculator
        calculatePrice();

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
